{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "properties": {
    "mission_id": {
      "type": "string",
      "description": "Unique identifier for the mission"
    },
    "planning_problem": {
      "type": "object",
      "description": "The planning problem containing the mission goal coordinates and timestamp",
      "properties": {
        "goal_waypoint": {
          "type": "object",
          "properties": {
            "latitude": {
              "type": "number",
              "description": "Latitude of the goal waypoint"
            },
            "longitude": {
              "type": "number",
              "description": "Longitude of the goal waypoint"
            }
          },
          "required": ["latitude", "longitude"],
          "description": "Goal waypoint coordinates"
        },
        "mission_start_timestamp": {
          "type": "string",
          "format": "date-time",
          "description": "Timestamp indicating when the mission request is made"
        }
      },
      "required": ["goal_waypoint", "mission_start_timestamp"]
    },
    "agent_config": {
      "type": "object",
      "description": "Configuration of the agent, including vessel details",
      "properties": {
        "vessel_configuration": {
          "type": "object",
          "properties": {
            "current_pose": {
              "type": "object",
              "properties": {
                "latitude": {
                  "type": "number",
                  "description": "Current latitude of the vessel"
                },
                "longitude": {
                  "type": "number",
                  "description": "Current longitude of the vessel"
                },
                "heading": {
                  "type": "number",
                  "description": "Heading of the vessel in degrees relative to north"
                }
              },
              "required": ["latitude", "longitude", "heading"],
              "description": "Current GPS pose and heading of the vessel"
            },
            "dynamics": {
              "type": "object",
              "properties": {
                "velocity": {
                  "type": "number",
                  "description": "Current velocity of the vessel in meters per second"
                },
                "orientation_rate": {
                  "type": "number",
                  "description": "Rate of change of orientation (degrees per second)"
                },
                "acceleration": {
                  "type": "number",
                  "description": "Rate of acceleration of the vessel in meters per second squared"
                }
              },
              "required": ["velocity", "orientation_rate", "acceleration"],
              "description": "Dynamics information of the vessel"
            }
          },
          "required": ["current_pose", "dynamics"],
          "description": "Current configuration of the vessel handling the mission"
        }
      },
      "required": ["vessel_configuration"]
    }
  },
  "required": ["mission_id", "planning_problem", "agent_config"],
  "additionalProperties": false
}
